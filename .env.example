# RentGrab Blog Environment Variables
# Copy this file to .env and fill in your values

# Site Configuration
PUBLIC_SITE_URL=https://blog.rentgrab.com
PUBLIC_SITE_TITLE="RentGrab Blog"
PUBLIC_SITE_DESCRIPTION="Equipment rental insights, guides, and success stories"

# Analytics (Google Analytics 4)
PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Error Monitoring (Sentry)
PUBLIC_SENTRY_DSN=
PUBLIC_SENTRY_ENVIRONMENT=production
PUBLIC_SENTRY_SAMPLE_RATE=0.1

# Performance Monitoring
PUBLIC_ENABLE_WEB_VITALS=true

# Feature Flags
PUBLIC_ENABLE_COMMENTS=false
PUBLIC_ENABLE_NEWSLETTER=true
PUBLIC_ENABLE_SEARCH=true

# API Configuration (if needed)
PUBLIC_API_URL=https://api.rentgrab.com
PUBLIC_API_TIMEOUT=5000

# CDN Configuration
PUBLIC_CDN_URL=https://cdn.rentgrab.com
PUBLIC_IMAGE_OPTIMIZATION=true

# Social Media
PUBLIC_TWITTER_HANDLE=@rentgrab
PUBLIC_FACEBOOK_PAGE=rentgrab
PUBLIC_LINKEDIN_COMPANY=rentgrab

# Contact Information
PUBLIC_CONTACT_EMAIL=blog@rentgrab.com
PUBLIC_SUPPORT_EMAIL=support@rentgrab.com