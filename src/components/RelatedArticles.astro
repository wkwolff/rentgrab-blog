---
import BlogCard from '@/components/BlogCard.astro';

export interface Props {
  currentCategory: string;
  currentTags: string[];
  currentSlug: string;
}

const { currentCategory, currentTags, currentSlug } = Astro.props;

// TODO: Fetch related articles from content collection
const relatedArticles = [
  {
    title: "The $3,000 Problem Hiding in Your Garage",
    description: "Discover how much value is sitting unused in your home and how the sharing economy can turn it into income.",
    href: "/blog/maximizing-earnings/hidden-value-in-your-garage",
    category: "maximizing-earnings",
    author: "W. Kevin Wolff",
    publishDate: "2025-08-20",
    tags: ["earning-tips", "passive-income", "getting-started"],
  },
  {
    title: "Complete Guide to Peer-to-Peer Rentals",
    description: "Everything you need to know about P2P rentals, how they work, and how to benefit as both renter and owner.",
    href: "/blog/getting-started/complete-guide-peer-to-peer-rentals",
    category: "getting-started",
    author: "W. Kevin Wolff",
    publishDate: "2025-08-18",
    tags: ["beginner-guide", "how-to", "tutorials"],
  },
];
---

<section class="bg-neutral-50 py-12 mt-16">
  <div class="container-lg">
    <h2 class="text-h2 mb-8">Related Articles</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {relatedArticles.map((article) => (
        <BlogCard
          title={article.title}
          description={article.description}
          href={article.href}
          category={article.category}
          author={article.author}
          publishDate={article.publishDate}
          tags={article.tags}
        />
      ))}
    </div>
  </div>
</section>