          </svg>
        </a>
        
        {/* Instagram */}
        <a
          href={finalAuthorData.social?.instagram || "https://www.instagram.com/rent.grab"}
          target="_blank"
          rel="noopener noreferrer"
          class="text-neutral-500 hover:text-primary-500 transition-colors"
