---
import { getEntry } from 'astro:content';

export interface Props {
  author: string;
}

const { author } = Astro.props;

// Convert author name to filename format (e.g., "W. Kevin Wolff" -> "kevin-wolff")
const authorSlug = author.toLowerCase()
  .replace('w. ', '')
  .replace(' ', '-');

// Try to fetch author data from content collection
let authorData;
try {
  const authorEntry = await getEntry('authors', authorSlug);
  authorData = authorEntry?.data || null;
} catch (error) {
  // Fallback if author not found
  authorData = null;
}

// Use fetched data or fallback to defaults
const finalAuthorData = authorData || {
  name: author,
  role: 'Content Writer',
  bio: 'Passionate about helping rental businesses grow and succeed through valuable insights and practical advice.',
  avatar: '/images/default-avatar.jpg',
  social: {
    twitter: 'https://x.com/rentgrab',
    linkedin: 'https://www.linkedin.com/company/rentgrab',
    instagram: 'https://www.instagram.com/rent.grab',
  }
};
---

<section class="author-bio mt-12">
  <div class="flex flex-col sm:flex-row gap-5">
    <img
      src={finalAuthorData.avatar}
      alt={`${finalAuthorData.name} avatar`}
      class="author-avatar flex-shrink-0"
      loading="lazy"
    />
    
    <div class="flex-1">
      <h3 class="text-h3 mb-1">{finalAuthorData.name}</h3>
      <p class="text-small text-primary-600 font-medium mb-3">{finalAuthorData.role}</p>
      <p class="text-neutral-600 mb-4">{finalAuthorData.bio}</p>
      
      <div class="flex gap-3">
        {/* Facebook */}
        <a
          href="https://www.facebook.com/rentgrab"
          target="_blank"
          rel="noopener noreferrer"
          class="text-neutral-500 hover:text-primary-500 transition-colors"
          aria-label="Follow RentGrab on Facebook"
        >
