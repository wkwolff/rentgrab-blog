---
export interface Props {
  author: string;
}

const { author } = Astro.props;

// TODO: Fetch author data from content collection
const authorData = {
  name: author,
  role: 'Content Writer',
  bio: 'Passionate about helping rental businesses grow and succeed through valuable insights and practical advice.',
  avatar: '/images/default-avatar.jpg',
  social: {
    twitter: 'https://x.com/rentgrab',
    linkedin: 'https://www.linkedin.com/company/rentgrab',
    instagram: 'https://www.instagram.com/rent.grab',
  }
};
---

<section class="author-bio mt-12">
  <div class="flex flex-col sm:flex-row gap-5">
    <img
      src={authorData.avatar}
      alt={`${authorData.name} avatar`}
      class="author-avatar flex-shrink-0"
      loading="lazy"
    />
    
    <div class="flex-1">
      <h3 class="text-h3 mb-1">{authorData.name}</h3>
      <p class="text-small text-primary-600 font-medium mb-3">{authorData.role}</p>
      <p class="text-neutral-600 mb-4">{authorData.bio}</p>
      
      {authorData.social && (
        <div class="flex gap-3">
          {authorData.social.twitter && (
            <a
              href={authorData.social.twitter}
              target="_blank"
              rel="noopener noreferrer"
              class="text-neutral-500 hover:text-primary-500 transition-colors"
              aria-label={`Follow ${authorData.name} on Twitter`}
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M22.46 6c-.85.38-1.75.64-2.71.76 1-.6 1.76-1.55 2.12-2.68-.93.55-1.96.95-3.06 1.17-.88-.94-2.13-1.53-3.51-1.53-2.66 0-4.81 2.16-4.81 4.81 0 .38.04.75.13 1.1-4-.2-7.58-2.11-9.96-5.02-.42.72-.66 1.56-.66 2.46 0 1.68.85 3.16 2.14 4.02-.79-.02-1.53-.24-2.18-.6v.06c0 2.35 1.67 4.31 3.88 4.76-.41.11-.84.17-1.28.17-.31 0-.62-.03-.92-.08.63 1.96 2.45 3.39 4.61 3.43-1.69 1.32-3.83 2.1-6.15 2.1-.4 0-.8-.02-1.19-.07 2.19 1.4 4.78 2.22 7.57 2.22 9.07 0 14.02-7.52 14.02-14.02 0-.21 0-.41-.01-.61.96-.69 1.79-1.56 2.45-2.55-.88.39-1.83.65-2.82.77z"/>
              </svg>
            </a>
          )}
          {authorData.social.linkedin && (
            <a
              href={authorData.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="text-neutral-500 hover:text-primary-500 transition-colors"
              aria-label={`Follow ${authorData.name} on LinkedIn`}
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
          )}
          {authorData.social.instagram && (
            <a
              href={authorData.social.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="text-neutral-500 hover:text-primary-500 transition-colors"
              aria-label={`Follow ${authorData.name} on Instagram`}
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1 1 12.324 0 6.162 6.162 0 0 1-12.324 0zM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm4.965-10.405a1.44 1.44 0 1 1 2.881.001 1.44 1.44 0 0 1-2.881-.001z"/>
              </svg>
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</section>