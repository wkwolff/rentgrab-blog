---
import Logo from '@/components/Logo.astro';

const navLinks = [
  { href: '/blog', label: 'All Posts' },
  { href: '/blog/getting-started', label: 'Getting Started' },
  { href: '/blog/maximizing-earnings', label: 'Earn' },
  { href: '/blog/smart-renting', label: 'Rent' },
  { href: '/blog/success-stories', label: 'Success Stories' },
  { href: '/blog/sustainability-impact', label: 'Impact' },
  { href: '/contact', label: 'Contact' },
];

// Normalize path for comparison (remove trailing slashes and .html)
const currentPath = Astro.url.pathname.replace(/\.html$/, '').replace(/\/$/, '') || '/';
---

<header class="sticky top-0 z-50 bg-white border-b border-neutral-200 backdrop-blur-sm bg-white/95">
  <nav class="container-lg py-4" aria-label="Main navigation">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group" aria-label="RentGrab Blog Home">
        <Logo />
        <span class="text-xl font-semibold text-neutral-900 group-hover:text-primary-500 transition-colors">
          Blog
        </span>
      </a>
      
      <!-- Desktop Navigation -->
      <ul class="hidden tablet:flex items-center gap-6">
        {navLinks.map((link) => {
          // Normalize link href for comparison
          const normalizedHref = link.href.replace(/\/$/, '');
          
          // Special handling for /blog to prevent it matching all blog pages
          const isActive = normalizedHref === '/blog' 
            ? currentPath === '/blog'
            : currentPath === normalizedHref || currentPath.startsWith(normalizedHref + '/');
          
          return (
            <li>
              <a
                href={link.href}
                class={`
                  font-medium transition-colors
                  ${isActive
                    ? 'text-primary-500'
                    : 'text-neutral-700 hover:text-primary-500'
                  }
                `}
                aria-current={isActive ? 'page' : undefined}
              >
                {link.label}
              </a>
            </li>
          );
        })}
      </ul>
      
      <!-- CTA Button -->
      <div class="hidden tablet:block">
        <a
          href="/#newsletter"
          class="btn-primary text-sm"
        >
          Join Waitlist
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="tablet:hidden p-2 text-neutral-700 hover:text-primary-500 transition-colors"
        aria-label="Toggle mobile menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div
      id="mobile-menu"
      class="hidden tablet:hidden fixed inset-x-0 top-[73px] bg-white border-b border-neutral-200 shadow-lg"
      aria-labelledby="mobile-menu-button"
    >
      <ul class="container-lg py-4 space-y-2">
        {navLinks.map((link) => {
          // Normalize link href for comparison
          const normalizedHref = link.href.replace(/\/$/, '');
          
          // Special handling for /blog to prevent it matching all blog pages
          const isActive = normalizedHref === '/blog' 
            ? currentPath === '/blog'
            : currentPath === normalizedHref || currentPath.startsWith(normalizedHref + '/');
          
          return (
            <li>
              <a
                href={link.href}
                class={`
                  block py-2 font-medium transition-colors
                  ${isActive
                    ? 'text-primary-500'
                    : 'text-neutral-700 hover:text-primary-500'
                  }
                `}
                aria-current={isActive ? 'page' : undefined}
              >
                {link.label}
              </a>
            </li>
          );
        })}
        <li class="pt-4 border-t border-neutral-200">
          <a
            href="/#newsletter"
            class="btn-primary inline-block text-sm"
          >
            Join Waitlist
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (menuButton && mobileMenu) {
    menuButton.addEventListener('click', () => {
      const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
      menuButton.setAttribute('aria-expanded', (!isExpanded).toString());
      mobileMenu.classList.toggle('hidden');
    });
    
    // Close menu when clicking outside
    document.addEventListener('click', (event) => {
      if (!menuButton.contains(event.target as Node) && !mobileMenu.contains(event.target as Node)) {
        menuButton.setAttribute('aria-expanded', 'false');
        mobileMenu.classList.add('hidden');
      }
    });
  }
</script>