---
import Logo from '@/components/Logo.astro';

const currentYear = new Date().getFullYear();

const footerLinks = {
  'Blog Categories': [
    { href: '/blog/guides', label: 'Guides' },
    { href: '/blog/industry-news', label: 'Industry News' },
    { href: '/blog/success-stories', label: 'Success Stories' },
    { href: '/blog/tips', label: 'Tips' },
    { href: '/blog/updates', label: 'Updates' },
  ],
  'RentGrab': [
    { href: 'https://rentgrab.com', label: 'Main Platform', external: true },
    { href: 'https://rentgrab.com/about', label: 'About Us', external: true },
    { href: 'https://rentgrab.com/contact', label: 'Contact', external: true },
    { href: 'https://rentgrab.com/pricing', label: 'Pricing', external: true },
  ],
  'Resources': [
    { href: '/rss.xml', label: 'RSS Feed' },
    { href: '/sitemap.xml', label: 'Sitemap' },
    { href: '/privacy', label: 'Privacy Policy' },
    { href: '/terms', label: 'Terms of Service' },
  ],
};

const socialLinks = [
  {
    name: 'Twitter',
    href: 'https://twitter.com/rentgrab',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M22.46 6c-.85.38-1.75.64-2.71.76 1-.6 1.76-1.55 2.12-2.68-.93.55-1.96.95-3.06 1.17-.88-.94-2.13-1.53-3.51-1.53-2.66 0-4.81 2.16-4.81 4.81 0 .38.04.75.13 1.1-4-.2-7.58-2.11-9.96-5.02-.42.72-.66 1.56-.66 2.46 0 1.68.85 3.16 2.14 4.02-.79-.02-1.53-.24-2.18-.6v.06c0 2.35 1.67 4.31 3.88 4.76-.41.11-.84.17-1.28.17-.31 0-.62-.03-.92-.08.63 1.96 2.45 3.39 4.61 3.43-1.69 1.32-3.83 2.1-6.15 2.1-.4 0-.8-.02-1.19-.07 2.19 1.4 4.78 2.22 7.57 2.22 9.07 0 14.02-7.52 14.02-14.02 0-.21 0-.41-.01-.61.96-.69 1.79-1.56 2.45-2.55-.88.39-1.83.65-2.82.77z"/></svg>`,
  },
  {
    name: 'LinkedIn',
    href: 'https://linkedin.com/company/rentgrab',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>`,
  },
  {
    name: 'Facebook',
    href: 'https://facebook.com/rentgrab',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>`,
  },
];
---

<footer class="bg-neutral-50 border-t border-neutral-200 mt-16">
  <div class="container-lg py-12">
    <!-- Top Section -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
      <!-- Brand -->
      <div class="md:col-span-1">
        <div class="flex items-center gap-3 mb-4">
          <Logo />
          <span class="text-xl font-semibold text-neutral-900">Blog</span>
        </div>
        <p class="text-small text-neutral-600 mb-4">
          Expert advice on equipment rental business, industry insights, and success stories.
        </p>
        <!-- Social Links -->
        <div class="flex gap-3">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-neutral-500 hover:text-primary-500 transition-colors"
              aria-label={`Follow us on ${social.name}`}
            >
              <Fragment set:html={social.icon} />
            </a>
          ))}
        </div>
      </div>
      
      <!-- Links -->
      {Object.entries(footerLinks).map(([category, links]) => (
        <div>
          <h3 class="font-semibold text-neutral-900 mb-4">{category}</h3>
          <ul class="space-y-2">
            {links.map((link) => (
              <li>
                <a
                  href={link.href}
                  target={link.external ? '_blank' : undefined}
                  rel={link.external ? 'noopener noreferrer' : undefined}
                  class="text-small text-neutral-600 hover:text-primary-500 transition-colors"
                >
                  {link.label}
                  {link.external && (
                    <span class="inline-block ml-1">↗</span>
                  )}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <!-- Newsletter Signup -->
    <div class="border-t border-neutral-200 pt-8 mb-8">
      <div class="max-w-md">
        <h3 class="font-semibold text-neutral-900 mb-2">Subscribe to our newsletter</h3>
        <p class="text-small text-neutral-600 mb-4">
          Get the latest rental insights delivered to your inbox.
        </p>
        <form class="flex gap-2">
          <input
            type="email"
            placeholder="Enter your email"
            required
            class="flex-1 px-4 py-2 border border-neutral-200 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
            aria-label="Email address"
          />
          <button type="submit" class="btn-primary">
            Subscribe
          </button>
        </form>
      </div>
    </div>
    
    <!-- Bottom Section -->
    <div class="border-t border-neutral-200 pt-8">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-small text-neutral-600">
          © {currentYear} RentGrab. All rights reserved.
        </p>
        <p class="text-small text-neutral-500">
          Built with ❤️ for the rental community
        </p>
      </div>
    </div>
  </div>
</footer>