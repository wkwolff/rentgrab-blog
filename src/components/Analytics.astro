<!-- Google Analytics 4 -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-13L6TS783Y"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  
  // Configure GA4 with your measurement ID
  gtag('config', 'G-13L6TS783Y', {
    page_path: window.location.pathname,
    send_page_view: true
  });
  
  // Log to verify GA4 is loading
  console.log('GA4 initialized with ID: G-13L6TS783Y');
  
